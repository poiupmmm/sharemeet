{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["hkg1"],
  "cleanUrls": true,
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "NEXT_SKIP_PAGES_BUILD_OPTIMIZATION": "true",
      "NEXT_PUBLIC_SKIP_OPTIMIZATION_ROUTES": "/activities/create,/activities/[id]/edit"
    }
  }
} 